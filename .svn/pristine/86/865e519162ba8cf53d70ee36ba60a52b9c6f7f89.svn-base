import React from "react"
import Table from '@mui/material/Table';
import TableBody from '@mui/material/TableBody';
import TableCell from '@mui/material/TableCell';
import TableContainer from '@mui/material/TableContainer';
import TableHead from '@mui/material/TableHead';
import TableRow from '@mui/material/TableRow';
import Paper from '@mui/material/Paper';
  
  export default function CartTable({selectedProducts, balance}) {
    return (
      <TableContainer component={Paper}>
        <Table sx={{ minWidth: 650 }} aria-label="simple table">
          <TableHead>
            <TableRow>
              <TableCell>Cantidad</TableCell>
              <TableCell align="right">Products</TableCell>
              <TableCell align="right">Subtotal</TableCell>
              <TableCell align="right">Impuesto</TableCell>
              <TableCell align="right">10% Servicio</TableCell>
              <TableCell align="right">Efectivo / Tarjeta</TableCell>
              <TableCell align="right">Beneficios</TableCell>
              <TableCell align="right">Total</TableCell>
            </TableRow>
          </TableHead>
          <TableBody>
            {selectedProducts.map((row) => (
              <TableRow
                key={row.name}
                sx={{ '&:last-child td, &:last-child th': { border: 0 } }}
              >
                <TableCell component="th" scope="row">
                  {row.quantity}
                </TableCell>
                <TableCell align="right">{row.name}</TableCell>
                <TableCell align="right">{row.price}</TableCell>
                <TableCell align="right">{(row.taxTypes[0] * row.price /100).toFixed(2)}</TableCell>
                <TableCell align="right">{0}</TableCell>
                <TableCell align="right">{0}</TableCell>
                <TableCell align="right">{balance}</TableCell>
                <TableCell align="right">{(+row.price + (row.taxTypes[0] * row.price /100)).toFixed(2)}</TableCell>
              </TableRow>
            ))}
          </TableBody>
        </Table>
      </TableContainer>
    );
  }